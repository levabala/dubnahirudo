---
import MoonIcon from '../icons/moon.astro';
import SunIcon from '../icons/sun.astro';
---

<nav class="mx-auto my-0 max-w-xl">
    <div class="navbar w-full bg-base-300 min-h-[3.5rem]">
        <div class="navbar-start">
            <span><b>logo</b></span>
        </div>
        <div class="navbar-center font-bold text-lg">
            <span>Клиника Гирудотерапии</span>
        </div>
        <div class="navbar-end">
            <button
                class="btn btn-sm btn-circle"
                x-data
                x-on:click="$store.darkMode.toggle()"
            >
                <span
                    class="invisible"
                    x-data
                    x-bind:class={`{
                            'invisible': $store.darkMode.on,
                            'hidden': $store.darkMode.on
                        }`}
                >
                    <MoonIcon />
                </span>
                <span
                    class="hidden"
                    x-data
                    x-bind:class="{ 'hidden': !$store.darkMode.on }"
                >
                    <SunIcon />
                </span>
            </button>
        </div>
    </div>
</nav>
