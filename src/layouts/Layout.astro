---
import DarkModeScript from '../scripts/darkModeScript.astro';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="is set by the script below">
    <head>
        <slot name="head" />
        <!-- is:inline changes path resolution to public/<path> -->
        <DarkModeScript />
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="text-base">
        <slot />
    </body>
</html>
