</Layout>
<style>
    .fadeIn {
        opacity: 0;
        visibility: hidden;
        animation: 5s fadeIn forwards;
        animation-fill-mode: forwards;
    }

    @keyframes fadeIn {
        0% {
            visibility: hidden;
        }
        90% {
            visibility: visible;
            opacity: 0;
        }
        100% {
            visibility: visible;
            opacity: 1;
        }
    }

    .table :where(th, td) {
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
    }
</style>
